<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
  
<mapper namespace="mapper.CategoryMapper">
	
	<select id="getCategoryList" resultType="model.Category">
		select * from t_category order by sort desc 
	</select>	
	
	<select id="getCategoryByAlias" parameterType="string" resultType="model.Category">
		select * from t_category where aliasName = #{aliasName}
	</select>
		
</mapper>
